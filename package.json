{
  "name": "cypresspractice01",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "cy:run:chrome": "cypress run --browser chrome",
    "cy:run:firefox": "cypress run --browser firefox",
    "cy:run:edge": "cypress run --browser edge",
    "cy:run:headless": "cypress run --headless",
    "cy:run:headed": "cypress run --headed",
    "cy:run:spec": "cypress run --spec",
    "test:smoke": "cypress run --env grepTags=smoke",
    "test:e2e": "cypress run --env grepTags=e2e",
    "test:regression": "cypress run --env grepTags=regression",
    "test:api": "cypress run --env grepTags=api",
    "test:ui": "cypress run --env grepTags=ui",
    "test:mobile": "cypress run --config viewportWidth=375,viewportHeight=667",
    "test:tablet": "cypress run --config viewportWidth=768,viewportHeight=1024",
    "test:desktop": "cypress run --config viewportWidth=1920,viewportHeight=1080",
    "test:parallel": "cypress run --record --parallel",
    "report:merge": "mochawesome-merge cypress/reports/mochawesome/*.json > cypress/reports/mochawesome/merged-report.json",
    "report:generate": "marge cypress/reports/mochawesome/merged-report.json --reportDir cypress/reports/mochawesome --inline",
    "report:mochawesome": "npm run report:merge && npm run report:generate",
    "test:with:reports": "cypress run && npm run report:mochawesome",
    "clean:reports": "rm -rf cypress/reports/* cypress/screenshots/* cypress/videos/*",
    "clean:reports:win": "if exist cypress\\reports rmdir /s /q cypress\\reports && if exist cypress\\screenshots rmdir /s /q cypress\\screenshots && if exist cypress\\videos rmdir /s /q cypress\\videos",
    "setup": "npm install && npx cypress verify",
    "test:debug": "cypress run --browser chrome --headed --no-exit",
    "test:record": "cypress run --record --key YOUR_RECORD_KEY",
    "lint": "eslint cypress/**/*.js",
    "format": "prettier --write cypress/**/*.js",
    "test:component": "cypress run --component",
    "test:env:dev": "cypress run --env environment=development",
    "test:env:staging": "cypress run --env environment=staging",
    "test:env:prod": "cypress run --env environment=production"
  },
  "keywords": [
    "cypress",
    "automation",
    "testing",
    "e2e",
    "qa",
    "selenium-alternative",
    "page-object-model",
    "test-framework"
  ],
  "author": "SDET Automation Engineer",
  "license": "MIT",
  "description": "Production-level Cypress Test Automation Framework with POM, Custom Commands, Utilities, and Comprehensive Reporting",
  "devDependencies": {
    "cypress": "^15.0.0",
    "cypress-file-upload": "^5.0.8",
    "eslint": "^8.0.0",
    "faker": "^6.6.6",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^5.0.0",
    "mochawesome-report-generator": "^6.2.0",
    "prettier": "^2.8.0"
  },
  "cypress": {
    "baseUrl": "https://automationexercise.com/",
    "supportFile": "cypress/support/e2e.js",
    "specPattern": "cypress/e2e/**/*.cy.js",
    "fixturesFolder": "cypress/fixtures",
    "screenshotsFolder": "cypress/screenshots",
    "videosFolder": "cypress/videos",
    "downloadsFolder": "cypress/downloads"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  }
}
